<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewLogoAndroid"
        android:layout_width="246dp"
        android:layout_height="217dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/logo_android"
        app:layout_constraintEnd_toEndOf="@+id/buttonEnviarSaludo"
        app:layout_constraintStart_toStartOf="@+id/buttonEnviarSaludo"
        app:layout_constraintTop_toBottomOf="@+id/buttonEnviarSaludo"
        app:srcCompat="@drawable/ic_android" />

    <Button
        android:id="@+id/buttonEnviarSaludo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/boton_saludar_texto"
        app:layout_constraintEnd_toEndOf="@+id/textViewMensaje"
        app:layout_constraintStart_toStartOf="@+id/textViewMensaje"
        app:layout_constraintTop_toBottomOf="@+id/textViewMensaje" />

    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#9C27B0"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/texto_holamundo"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchEscoger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Switch"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLogoAndroid"
        app:layout_constraintStart_toStartOf="@+id/imageViewLogoAndroid"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoAndroid" />


</androidx.constraintlayout.widget.ConstraintLayout>